{
    "compilerOptions": {
        "target": "ESNext",
        "experimentalDecorators": true,
        "module": "ESNext",
        "rootDir": "./src",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist/es",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
